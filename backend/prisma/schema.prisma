  score      Float
  maxScore   Float
  timestamp  DateTime @default(now())
  weight     Float    @default(1.0)
  aiAnalysis Json?

  mastery StudentConceptMastery @relation(fields: [masteryId], references: [id], onDelete: Cascade)

  @@map("mastery_evidence")
}

model CurriculumProgressTracker {
  id             String @id @default(uuid())
  studentId      String
  curriculumId   String
  classId        String
  academicYearId String

  overallProgress   Float    @default(0) // 0-100
  subjectProgress   Json? // { subjectId: progressPercent }
  progressionStatus String   @default("ON_TRACK") // ON_TRACK, AHEAD, BEHIND, AT_RISK
  lastUpdated       DateTime @default(now())

  student      Student      @relation(fields: [studentId], references: [id], onDelete: Cascade)
  curriculum   Curriculum   @relation(fields: [curriculumId], references: [id], onDelete: Cascade)
  class        Class        @relation(fields: [classId], references: [id], onDelete: Cascade)
  academicYear AcademicYear @relation(fields: [academicYearId], references: [id], onDelete: Cascade)

  @@unique([studentId, curriculumId, classId, academicYearId])
  @@map("curriculum_progress_trackers")
}
