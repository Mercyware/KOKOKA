model Curriculum {
  id                   String    @id @default(uuid())
  schoolId             String
  name                 String
  description          String?
  version              String?
  type                 String // CAMBRIDGE, IB, NATIONAL, STEM, CUSTOM, etc.
  status               String    @default("DRAFT") // DRAFT, ACTIVE, ARCHIVED
  startYear            Int?
  endYear              Int?
  implementationStatus String? // PLANNED, PILOTING, ACTIVE, PHASED_OUT
  customizationLevel   String? // FULL, PARTIAL, MINIMAL
  adoptionDate         DateTime?
  createdBy            String
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  school           School                      @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  user             User                        @relation("CurriculumCreatedBy", fields: [createdBy], references: [id])
  subjects         CurriculumSubject[]
  classAssignments ClassCurriculum[]
  progressTrackers CurriculumProgressTracker[]

  @@unique([schoolId, name, version])
  @@map("curricula")
}

model CurriculumSubject {
  id            String   @id @default(uuid())
  curriculumId  String
  subjectId     String
  gradeLevel    Int
  term          String?
  displayOrder  Int      @default(0)
  hoursPerWeek  Int?
  isCore        Boolean  @default(true)
  isOptional    Boolean  @default(false)
  prerequisites String[] @default([])

  curriculum         Curriculum          @relation(fields: [curriculumId], references: [id], onDelete: Cascade)
  subject            Subject             @relation("CurriculumSubjects", fields: [subjectId], references: [id], onDelete: Cascade)
  topics             Topic[]
  learningObjectives LearningObjective[]
  contentModules     ContentModule[]

  @@unique([curriculumId, subjectId, gradeLevel])
  @@map("curriculum_subjects")
}

model LearningObjective {
  id                  String  @id @default(uuid())
  curriculumSubjectId String
  code                String?
  description         String
  bloomsLevel         String? // REMEMBER, UNDERSTAND, APPLY, ANALYZE, EVALUATE, CREATE
  displayOrder        Int     @default(0)

  curriculumSubject CurriculumSubject @relation(fields: [curriculumSubjectId], references: [id], onDelete: Cascade)

