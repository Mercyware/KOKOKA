# =============================================================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# Node environment (development, production, test)
NODE_ENV=development

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server port
PORT=5000

# Server host
HOST=localhost

# API base URL
API_URL=http://localhost:5000/api

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Main domain for subdomains
MAIN_DOMAIN=schoolmanagement.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/school-management

# =============================================================================
# JWT CONFIGURATION
# =============================================================================

# JWT secret key (generate a strong secret for production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT refresh token secret
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-this-in-production

# JWT token expiration time
JWT_EXPIRE=1d

# JWT refresh token expiration time
JWT_REFRESH_EXPIRE=7d

# JWT issuer
JWT_ISSUER=school-management-system

# JWT audience
JWT_AUDIENCE=school-management-users

# JWT algorithm
JWT_ALGORITHM=HS256

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# CORS allowed origins (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:3000

# CORS allowed methods
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# CORS credentials
CORS_CREDENTIALS=true

# =============================================================================
# RATE LIMITING
# =============================================================================

# Rate limit window in milliseconds (15 minutes = 15 * 60 * 1000)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window
RATE_LIMIT_MAX=100

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

# Maximum file upload size in bytes (5MB = 5 * 1024 * 1024)
FILE_UPLOAD_MAX_SIZE=5242880

# Allowed file types (comma-separated)
FILE_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Enable helmet middleware (true/false)
HELMET_ENABLED=true

# Enable XSS protection (true/false)
XSS_PROTECTION_ENABLED=true

# =============================================================================
# MAINTENANCE MODE
# =============================================================================

# Enable maintenance mode (true/false)
MAINTENANCE_MODE=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable AI features (true/false)
FEATURE_AI_ENABLED=true

# Enable SMS features (true/false)
FEATURE_SMS_ENABLED=true

# Enable email features (true/false)
FEATURE_EMAIL_ENABLED=true

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP server host
EMAIL_HOST=smtp.gmail.com

# SMTP server port
EMAIL_PORT=587

# Use secure connection (true/false)
EMAIL_SECURE=false

# Email username
EMAIL_USER=your-email@gmail.com

# Email password or app password
EMAIL_PASSWORD=your-email-password

# Default "from" email address
EMAIL_FROM=School Management System <noreply@schoolmanagement.com>

# =============================================================================
# SMS CONFIGURATION
# =============================================================================

# SMS provider (twilio, nexmo, etc.)
SMS_PROVIDER=twilio

# SMS API key (Twilio Account SID or Nexmo API Key)
SMS_API_KEY=your-sms-api-key

# SMS API secret (Twilio Auth Token or Nexmo API Secret)
SMS_API_SECRET=your-sms-api-secret

# SMS sender name/number
SMS_FROM=SchoolMgmt

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================

# AI API provider (openai, google, etc.)
AI_PROVIDER=openai

# AI API key
AI_API_KEY=your-ai-api-key

# AI API base URL
AI_API_URL=https://api.openai.com/v1

# AI model to use
AI_MODEL=gpt-4

# Maximum tokens for AI responses
AI_MAX_TOKENS=1000

# AI temperature (creativity level: 0.0 to 1.0)
AI_TEMPERATURE=0.7

# =============================================================================
# SWAGGER DOCUMENTATION
# =============================================================================

# API documentation contact email
API_CONTACT_EMAIL=support@schoolmanagement.com

# Production API server URL for Swagger docs
PRODUCTION_API_URL=https://school-management-api.example.com

# =============================================================================
# ADDITIONAL CONFIGURATIONS
# =============================================================================

# Session secret for cookie-parser (if needed)
SESSION_SECRET=your-session-secret-key

# Encryption key for sensitive data
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# Password reset token expiration time (in minutes)
PASSWORD_RESET_EXPIRE=10

# Account activation token expiration time (in minutes)
ACTIVATION_TOKEN_EXPIRE=1440

# Maximum login attempts before lockout
MAX_LOGIN_ATTEMPTS=5

# Account lockout duration (in minutes)
LOCKOUT_DURATION=30

# =============================================================================
# DEVELOPMENT/DEBUGGING
# =============================================================================

# Enable debug mode (true/false)
DEBUG=false

# Enable request logging (true/false)
ENABLE_REQUEST_LOGGING=true

# Enable database query logging (true/false)
ENABLE_DB_LOGGING=false